<table  class="table-data table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
            <tr>
              <th>Student id</th>
              <th>Student</th>
              <th>Course</th>
              <th>Teacher</th>
              <th>State</th>
              <th></th>
              <th></th>
            </tr>
        </thead>
       
        <tbody>
            <% @student_courses.each do |student_course| %>
              <tr>
                <td><%= student_course.student_id %></td>
                <td><%= student_course.student.name %></td>
                <td><%= student_course.course.course_name %></td>
                <td><%= student_course.teacher_id %></td>
                <td><%= student_course.state %></td>
                <td><%= link_to 'Edit', edit_student_course_path(student_course) %></td>
                <td><%= link_to 'Destroy', student_course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
        </tbody>
        